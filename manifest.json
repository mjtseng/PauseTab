{
	"manifest_version": 2,
	"name": "PauseTab",
	"version": "PauseTab 1.0",
	
	"default_locale": "en",
	"description": "A Chrome extension to pause your tabs. Set a timer for when you want to return to your tabs. Includes anti-procrastination features - effectiveness not guaranteed.",
	"icons": 
	{
			"16": "./assets/logos/Logo16.png",
			"48": "./assets/logos/Logo48.png",
			"32": "./assets/logos/Logo32.png",
			"64": "./assets/logos/Logo64.png",
			"128": "./assets/logos/Logo128.png",
	},
	
	"browser_action":
	{
		"default_icon":
		{
			"16": "./assets/logos/Logo16.png",
			"48": "./assets/logos/Logo48.png",
			"32": "./assets/logos/Logo32.png",
			"64": "./assets/logos/Logo64.png",
			"128": "./assets/logos/Logo128.png",
		},
		
		"default_title": "PauseTab",
		"default_popup": "popup.html",
	},
}
